<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<div class="list_item">
		<span class="column" style="width: 300px;">
			<cms:days
				value="$params['days']"
				template="list_item_days.xml"
				local="1"
				cms:eval="value"
				/>
		</span>
		<span class="column" style="width: 150px;">
			<cms:times
				interval="$params['id']"
				template="list_item_times.xml"
				local="1"
				cms:eval="interval"
				/>
		</span>
		<span class="column">
			<cms:var name="$params['item_change']"/><cms:raw text=" "/>
			<cms:var name="$params['item_delete']"/>
		</span>
	</div>
</document>
