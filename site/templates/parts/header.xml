<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<header
		class="$section == 'home' ? 'home' : false"
		cms:optional="class"
		>
		<a
			href="url_Make()"
			class="logo"
			cms:eval="href"
			>
			<img
				src="_BASEURL.'/site/images/logo.svg'"
				alt="site_title"
				cms:eval="src"
				cms:constant="alt"
				/>
		</a>

		<div class="wrap">
			<!-- Search form -->
			<form
				action="url_Make('', 'search')"
				method="GET"
				cms:eval="action"
				>
				<label cms:skip_cache="1">
					<input
						type="search"
						name="query"
						placeholder="placeholder_search"
						value="isset($_REQUEST['query']) ? fix_chars($_REQUEST['query']) : false"
						cms:optional="value"
						cms:constant="placeholder"
						/>
				</label>
				<button type="submit">
					<cms:text constant="label_search"/>
				</button>
			</form>

			<!-- Main menu -->
			<nav id="main">
				<ul>
					<li>
						<a
							href="url_Make()"
							class="$section == 'home' ? 'active' : false"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_home"/>
						</a>
					</li>
					<li>
						<a
							href="url_Make('', 'contact')"
							class="$section == 'contact' ? 'active' : false"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_contact"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'help' ? 'active' : false"
							href="url_Make('', 'help')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_help"/>
						</a>
					</li>

					<cms:guest>
						<li class="user">
							<span><cms:text constant="label_welcome"/></span>
							<a
								href="javascript: void(0);"
								class="login"
								>
								<cms:text constant="menu_login"/>
							</a>
							<a
								href="javascript: void(0);"
								class="sign-up"
								>
								<cms:text constant="menu_sign_up"/>
							</a>
						</li>
					</cms:guest>
				</ul>
			</nav>
		</div>

		<nav id="categories">
			<ul>
				<cms:module
					name="shop"
					action="show_category"
					text_id="vegetables"
					template="parts/category_menu_item_with_children.xml"
					/>
				<cms:module
					name="shop"
					action="show_category"
					text_id="fruits"
					template="parts/category_menu_item.xml"
					/>
				<cms:module
					name="shop"
					action="show_category"
					text_id="deli"
					template="parts/category_menu_item_with_children.xml"
					/>
				<cms:module
					name="shop"
					action="show_category"
					text_id="sale"
					template="parts/category_menu_item.xml"
					/>
			</ul>
		</nav>
	</header>
</document>
