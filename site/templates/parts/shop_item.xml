<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<div
		class="item"
		data-uid="$params['uid']"
		cms:eval="data-uid"
		>
		<h5><cms:var param="name" multilanguage="yes"/></h5>

		<div
			class="image"
			style="'background-image: url('.gallery::getGroupThumbnailById($params['gallery'], null, 170, Thumbnail::CONSTRAIN_BOTH).');'"
			cms:eval="style"
			/>

		<div class="price">
			<cms:var param="price"/>
			<cms:raw text="&amp;nbsp;"/>
			<cms:text constant="currency"/>
		</div>

		<form class="units">
			<cms:value_list
				definition="$params['size_definition']"
				select_first="1"
				template="parts/shop_item_unit.xml"
				cms:eval="definition"
				/>
		</form>

		<div class="controls">
			<a
				href="javascript: void(0);"
				class="alter increase"
				>
				<svg><use xlink:href="site/images/cart-controls.svg#icon-plus"/></svg>
			</a>
			<span>0</span>
			<a
				href="javascript: void(0);"
				class="alter decrease"
				>
				<svg><use xlink:href="site/images/cart-controls.svg#icon-minus"/></svg>
			</a>
		</div>
	</div>
</document>
